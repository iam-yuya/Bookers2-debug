<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時-->

  <% if @range == "User" %>
    <thead>
      <th></th>
      <th>Name</th>
      <th>Introduction</th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
          <td><%= link_to user.name, user_path(user) %></td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではないとき(=検索対象モデルがBookの時)-->
    <thead>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
        <td>
          <%= link_to book.title, book_path(book) %>
        </td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  <% end %>
</table>